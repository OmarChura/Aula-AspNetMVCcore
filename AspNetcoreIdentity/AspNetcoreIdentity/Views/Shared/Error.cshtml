@model ErrorViewModel
@{
    ViewData["Title"] = Model == null ? "Ocorreu um erro!" : Model.Titulo;
}

@{
    if(Model == null)
    {
        <div>
            <h2> Ooops! Ocorreu  um erro, mas nao se preocupe. nosso time sera avisado e iremops ccorrigir em breve"</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Titulo)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
    }
}
